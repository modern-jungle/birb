{
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "hero": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": true
    },
    "published_at": {
      "type": "date",
      "required": true
    },
    "category": {
      "model": "category",
      "via": "articles"
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "writing.article-image-full-bleed",
        "writing.article-image",
        "writing.article-section",
        "writing.quote"
      ]
    },
    "subjects": {
      "collection": "subject",
      "via": "article"
    },
    "preview": {
      "type": "text",
      "required": true
    },
    "author": {
      "model": "author",
      "via": "articles"
    },
    "slug": {
      "type": "string",
      "unique": true
    },
    "weekly_feature": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  }
}
