{
  "connection": "default",
  "collectionName": "authors",
  "info": {
    "name": "author"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email"
    },
    "biography": {
      "type": "text"
    },
    "articles": {
      "via": "author",
      "collection": "article"
    }
  }
}
